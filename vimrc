" 非兼容模式
set nocompatible

" 设置行号
set number

" Save 1000 item in history
set history=1000

" 设置右下角信息显示
set ruler

" show command
set showcmd

" Ignore 
set ignorecase

" 搜索高亮
set hlsearch

" Enable incremental searching
set incsearch

set ignorecase
set smartcase

set autoindent
set smartindent

" solarized 主题配置
syntax enable
set background=dark
colorscheme solarized

" let &t_SI = "\<Esc>]50;CursorShape=1\x7"
" let &t_EI = "\<Esc>]50;CursorShape=0\x7"

